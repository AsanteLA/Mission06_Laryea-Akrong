@{
    ViewData["Title"] = "Movie Entry Form";
}
@model MovieEntryForm
<h1>Movie Entry Form</h1>

<form method="post">
    <label asp-for="CategoryId">Category:</label><br />
    <input asp-for="CategoryId" />
    <br /><br />
    <label asp-for="Title">Title:</label><br />
    <input asp-for="Title" />
    <br /><br />
    <label asp-for="Year">Year:</label><br />
    <input asp-for="Year" />
    <br /><br />
    <label asp-for="Director">Director:</label><br />
    <input asp-for="Director" />
    <br /><br />
    <label asp-for="Rating">Rating:</label><br />
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br /><br />
    <label asp-for="Edited">Edited:</label><br />
    <select asp-for="Edited">
        <option value=""></option>
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br /><br />
    <label asp-for="LentTo">Lent To:</label><br />
    <input asp-for="LentTo" />
    <br /><br />
    <label asp-for="CopiedtoPlex">CopiedToPlex:</label><br />
    <select asp-for="CopiedtoPlex">
        <option value=""></option>
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br /><br />
    <label asp-for="Notes">Notes:</label><br />
    <input asp-for="Notes" maxlength ="25"/>
    <br /><br />
    <button type="submit">Submit Movie Entry</button>
    <br />
</form>