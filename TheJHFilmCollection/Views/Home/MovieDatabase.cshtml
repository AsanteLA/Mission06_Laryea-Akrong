@{
}
@model List<MovieEntryForm>

<table class=" table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>MovieID</td>
            <td>CategoryID</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Copied To Plex?</td>
            <td>Notes</td>
        </tr>

    </thead>

    @foreach (var entry in Model)
    {
        <tbody>
            <tr>
                <td>@entry.MovieID</td>
                <td>@entry.CategoryId</td>
                <td>@entry.Title</td>
                <td>@entry.Year</td>
                <td>@entry.Director</td>
                <td>@entry.Rating</td>
                <td>@entry.Edited</td>
                <td>@entry.LentTo</td>
                <td>@entry.CopiedtoPlex</td>
                <td>@entry.Notes</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@entry.MovieID">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@entry.MovieID">Delete</a></td>
            </tr>

        </tbody>
    }
</table>